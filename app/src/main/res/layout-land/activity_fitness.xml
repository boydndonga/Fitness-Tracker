<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:showDividers="middle"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/fragmentItemsList"
        android:name="com.example.ndonga.fitnesstracker.ui.FitnesstListFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="3"
        tools:layout="@layout/fragment_track_list" />

    <View android:background="@color/colorAccent"
        android:layout_width="2dp"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/trackDetailContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>